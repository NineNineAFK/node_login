<!-- adminHome.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home</title>
</head>
<body>
    <h1>Welcome to Admin Home</h1>
    <ul>
        <% users.forEach(user => { %>
            <li>
                <%= user.name %> - <%= user.email %>
                <form action="/users/admin/userDelete/<%= user.id %>" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>

    <!-- Logout button -->
    <form action="/users/admin/logout" method="POST">
        <button type="submit">Logout</button>
    </form>
</body>
</html>
