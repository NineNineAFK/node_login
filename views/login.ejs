<body class="bg-black ">

    <ul class="text-white text-3xl text-bold" >

        <% if (messages.success_msg) { %>
         <li>   <%= messages.success_msg %>
            <% } %>
        </li>

    </ul>

    <ul>
        <% if (messages.error) { %>
         <li><%= messages.error %> </li>
        <% } %>
    </ul>


    <form action="/users/login" method="POST" class="flex flex-col align-items-center justify-center h-screen">



        <div class="justify-start pb-5 flex flex-row">
            <a href="/">
                <span class="material-symbols-outlined text-white text-7xl ">
                    exercise
                    </span>

                  
    
            </a>

            
        <h1 class="text-7xl font-bold pl-3 text-white pr-5">Login</h1>

        </div>
     

        <div>
            <input type="text" placeholder="Full Name" id="name"  class="w-96" required>
        </div>
        
        <div class="p-3">
            <input type="text" placeholder="Email" id="email"  class="w-96" required>
        </div>

        <div class="p-0">
            <input type="password" placeholder="Password" id="password"   class="w-96" required>
        </div>

        <div class="p-5">
            <input type="submit" name="login" value="Login" class="w-96 text-white" id="">
        </div>


        <div>
            <a href="/users/register" class="text-gray-400 hover:text-gray-300 focus:text-gray-500"> New user? register here</a>
        </div>
    </form>

</body>



